<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <gradient android:startColor="@color/aquastartcolor"
                  android:endColor="@color/aquaendcolor"
                  android:type="radial"
                  android:angle="90"
                  android:gradientRadius="50dp"/>
        <corners android:radius="15dp"/>
    </shape>
</item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/aquabuttonstartcolor"
                      android:endColor="@color/aquabuttonstartcolor"
                      android:type="radial"
                      android:angle="90"
                      android:gradientRadius="100dp"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>