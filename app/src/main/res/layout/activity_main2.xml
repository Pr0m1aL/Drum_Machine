<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:background="@drawable/aqua_button"
                android:text="melody 1"
                android:onClick="playsound1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/aqua_button"
                android:text="melody 2"
                android:layout_marginStart="7dp"
                android:onClick="playsound2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/aqua_button"
                android:text="melody 3"
                android:layout_marginStart="7dp"
                android:onClick="playsound3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:background="@drawable/pink_button"
                android:text="high hat"
                android:layout_marginTop="7dp"
                android:onClick="playsound4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/pink_button"
                android:text="open hat"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:onClick="playsound5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/yellow_button"
                android:text="clap"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:onClick="playsound6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:background="@drawable/purple_button"
                android:text="snare"
                android:layout_marginTop="7dp"
                android:onClick="playsound7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/blue_button"
                android:text="kick"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:onClick="playsound8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/yellow_button"
                android:text="perc"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:onClick="playsound9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:background="@drawable/grey_button"
                android:text="@string/one"
                android:layout_marginTop="18dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="onClick1"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/grey_button"
                android:text="@string/two"
                android:layout_marginStart="5dp"
                android:layout_marginTop="18dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/grey_button"
                android:text="@string/three"
                android:layout_marginStart="5dp"
                android:layout_marginTop="18dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="onClick2"
                style="?android:attr/borderlessButtonStyle"/>

        <Button
                android:background="@drawable/grey_button"
                android:text="+"
                android:layout_marginStart="5dp"
                android:layout_marginTop="18dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="onClick3"
                style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>


</LinearLayout>